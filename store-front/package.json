{
  "name": "algonquin-pet-store-store-front",
  "version": "1.0.0",
  "description": "Algonquin Pet Store Frontend - 12-Factor App compliant Vue.js application",
  "private": true,
  "scripts": {
    "start": "vue-cli-service serve",
    "serve": "vue-cli-service serve",
